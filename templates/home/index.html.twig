{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="d-flex flex-column justify-content-center">
        <h1 class="text-center">EZPay</h1>

        {% if app.user is not null %}
            <p class="text-center">Bonjour {{ app.user.email }}</p>
        {% endif %}

        <p class="text-center">Bienvenue sur EZPay, le site de vente en ligne de produits électroniques.</p>

        <h2 class="text-center">Liste des produits</h2>

        <div class="d-flex flex-row flex-wrap justify-content-center gap-4">
            {% for product in products %}
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.price }} €</p>
                        {% if app.user is not null %}
                            <a href="{{ path('app_payment_checkout', {'id': product.id}) }}">Payer</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-dark">Acheter</a>
                        {% endif %}
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}