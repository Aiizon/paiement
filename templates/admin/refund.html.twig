{% extends 'base.html.twig' %}

{% block title %}Remboursement d'un paiement{% endblock %}

{% block body %}
    <div class="d-flex flex-column justify-content-center container mt-5 pt-5">
        <h2 class="text-center mb-4">Rembourser un paiement</h2>

        <div class="card">
            <div class="card-body">
                <div class="mb-4">
                    <h5>Détails du paiement</h5>
                    <p><strong>N° de commande : </strong>{{ payment.id }}</p>
                    <p><strong>Montant : </strong>{{ payment.amount }}</p>
                    <p><strong>Date : </strong>{{ payment.createdAt|date('d/m/Y H:i') }}</p>
                </div>

                <div class="alert alert-info">
                    Veuillez saisir le montant à rembourser. Ce montant doit être compris entre 0€ et {{ payment.amount }} €.
                </div>

                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                <div class="mb-3">
                    {{ form_label(form.amount) }}
                    {{ form_widget(form.amount) }}
                    {{ form_errors(form.amount) }}
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_admin') }}" class="btn btn-secondary">Annuler</a>
                    {{ form_widget(form.submit) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}